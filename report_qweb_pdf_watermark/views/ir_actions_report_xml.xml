<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="act_report_xml_view" model="ir.ui.view">
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view"/>
        <field name="arch" type="xml">
            <field name="attachment" position="after">
                <field invisible="report_type != 'qweb-pdf'" name="use_company_watermark"/>
                <field groups="base.group_no_one" invisible="report_type != 'qweb-pdf' or use_company_watermark == True" name="pdf_watermark_expression"/>
                <field invisible="report_type != 'qweb-pdf' or use_company_watermark == True" name="pdf_watermark" widget="pdf_viewer"/></field></field>
    </record>
</odoo>
